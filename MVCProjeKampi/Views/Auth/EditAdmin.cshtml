@model EntityLayer.Concrete.Admin2
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


@using (Html.BeginForm("EditAdmin", "Auth", FormMethod.Post))
{

    <div class="form-group">
        @Html.HiddenFor(c => c.AdminId, new { @class = "form-control" })
        @Html.HiddenFor(c => c.AdminRole, new { @class = "form-control" })
        @Html.HiddenFor(c => c.AdminUserName, new { @class = "form-control" })
        <br />
        @Html.Label("Admin Kullanıcı Adı")
        @Html.TextBoxFor(c => c.AdminUserName, new { @class = "form-control" })
        <br />
        @Html.Label("Rol")
        @Html.DropDownListFor(c => c.AdminRole, (List<SelectListItem>)ViewBag.valueadmin, new { @class = "form-control" })
        <br />

        <button class="btn btn-success">Güncelle</button>


    </div>
}
