<!DOCTYPE html>
<html>
<head>
    <title>Yetenek Sayfası</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Skills Profile Widget template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="~/AdminLTE-3.0.4/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="~/AdminLTE-3.0.4/web/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="~/AdminLTE-3.0.4/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>

<body>

    <!-- main -->
    <div class="main">
        <h1>Yetenek Kartı Sayfası</h1>
        <div class="main-info w3l">
            <div class="main-row">
               
                <!-- main-row-one -->
                @foreach (var item in Model)
                {
                <div class="form-group row">

                    <a class="btn btn-danger " href="/Heading/Index/">
                        <i class="fas fa-trash"></i>
                        Ana Menüye Dön
                    </a>


                </div>

                    <div class="profile-grid logo wthree">
                        <img src="~/AdminLTE-3.0.4/dist/img/Foto.png" class="img-circle elevation-2" alt="User Image">
                        <h2>@item.Name @item.Surname </h2>
                        <p>@item.Text</p>

                    </div>
                    <h3 class="title">Yetenekler</h3>


                    <div class="col-md- skills-right bar_group">

                        <div class='bar_group__bar thin' label='@item.SkillName1 &nbsp;&nbsp; @item.SkillStage1%' value='@item.SkillStage1'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName2 &nbsp;&nbsp; @item.SkillStage2%' value='@item.SkillStage2'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName3 &nbsp;&nbsp; @item.SkillStage3%' value='@item.SkillStage3'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName4 &nbsp;&nbsp; @item.SkillStage4%' value='@item.SkillStage4'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName5 &nbsp;&nbsp; @item.SkillStage5%' value='@item.SkillStage5'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName6 &nbsp;&nbsp; @item.SkillStage6%' value='@item.SkillStage6'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName7 &nbsp;&nbsp; @item.SkillStage7%' value='@item.SkillStage7'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName8 &nbsp;&nbsp; @item.SkillStage8%' value='@item.SkillStage8'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName9 &nbsp;&nbsp; @item.SkillStage9%' value='@item.SkillStage9'></div>
                        <div class='bar_group__bar thin' label='@item.SkillName10 &nbsp;&nbsp; @item.SkillStage10%' value='@item.SkillStage10'></div>



                    </div>



                    <!--bar-js-->
                    <script src="~/AdminLTE-3.0.4/web/js/bars.js"></script>
                    <div class="social-icons agileits">
                        <ul>
                            <li><a href="#"></a></li>
                            <li><a href="https://www.linkedin.com/in/furkannneren" class="fa-linkedin"></a></li>
                            <li><a href="#" class="be"></a></li>
                            <li><a href="#" class="gg"></a></li>
                        </ul>
                    </div>
                    <div class="clear"> </div>
                }
            </div>
        </div>
        <!-- copyright -->
        <div class="copyright">
            <p> İstatistikleri incelemek için  <a href="/Istatistik/Index/" target="_blank">tıklayınız.</a></p>
        </div>
        <!-- //copyright -->
    </div>
    <!-- main -->
</body>
</html>