@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@{ string color = "";}


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h class="card-title">Başlık İşlemleri</h>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 15%">
                                Yazar
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>

                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Category.CategoryName == "Tiyatro")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Category.CategoryName == "Yazılım")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Category.CategoryName == "Edebiyat")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Category.CategoryName == "Seyahat")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Category.CategoryName == "Politika")
                            {
                                color = "badge badge-dark";
                            }
                            if (item.Category.CategoryName == "Tarih")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Category.CategoryName == "Futbol")
                            {
                                color = "badge badge-danger";
                            }

                    

                        <tr>
                            <td>
                                @item.HeadingId
                            </td>
                            <td>
                                <a>
                                    @item.HeadingName
                                </a>
                                <br />
                                <small>
                                    @item.HeadingDate.ToString("dd MMMMMMM yyyy")
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Foto" class="table-avatar" src="@item.Writer.WriterImage">
                                    </li>

                                </ul>
                            </td>

                            <td class="project-actions">
                                @if (item.HeadingStatus == true)
                                {
                                    <span class="badge badge-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Pasif</span>
                                }
                            </td>
                            <td class="project-state">
                                <span class="@color">@item.Category.CategoryName</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="/Content/ContentbyHeading/@item.HeadingId">
                                    <i class="fas fa-folder">
                                    </i>
                                    Yazılar
                                </a>
                                <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingId">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingId">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                                <br />
                            <a class="project-actions text-right">
                                @if (item.HeadingStatus == true)
                                {
                                    <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingId">
                                        <i class="fas fa-trash"></i>
                                        Pasifleştir
                                    </a>
                                }
                                else
                                {
                                    <a class="btn btn-success btn-sm" href="/Heading/DeleteHeading/@item.HeadingId">
                                        <i class="fas fa-trash"></i>
                                        Aktifleştir
                                    </a>
                                }
                            </a>
                            </td>
                        </tr>
                    }


                        </tbody>
                    </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
</body>
</html>
<a href="/Heading/AddHeading/" class="btn btn-primary">Yeni Başlık Ekle</a>

